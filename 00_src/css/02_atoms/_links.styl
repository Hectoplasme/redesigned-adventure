.link
    bold()
    display inline
    padding 0.1rem 0.5rem
    background repeating-linear-gradient(
        180deg,
        transparent,
        transparent 60%,
        $c-primary 60%,
        $c-primary 99%
    )

    &:hover
        background repeating-linear-gradient(
            180deg,
            transparent,
            transparent 0%,
            $c-primary 0%,
            $c-primary 99%
        )

.section--dark
    .link, .menu a, .rte a
        bold()
        display inline
        padding 0.2rem 0.5rem
        background repeating-linear-gradient(
            180deg,
            transparent,
            transparent 60%,
            $c-secondary 60%,
            $c-secondary 100%
        )

        &:hover
            background repeating-linear-gradient(
                180deg,
                transparent,
                transparent 0%,
                $c-secondary 0%,
                $c-secondary 100%
            )
