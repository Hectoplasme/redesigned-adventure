.btn
    display inline-block
    padding 0.5rem 0.5rem
    background repeating-linear-gradient(
        180deg,
        transparent -1%,
        transparent 60%,
        $c-primary 60%,
        $c-primary 100%
    )

    &:hover
        background repeating-linear-gradient(
            180deg,
            transparent -1%,
            transparent 0rem,
            $c-primary 0rem,
            $c-primary 100%
        )

.section--dark
    .btn
        background repeating-linear-gradient(
            180deg,
            transparent -1%,
            transparent 60%,
            $c-secondary 60%,
            $c-secondary 100%
        )

        &:hover
            background repeating-linear-gradient(
                180deg,
                transparent,
                transparent 0rem,
                $c-secondary 0rem,
                $c-secondary 98%
            )
