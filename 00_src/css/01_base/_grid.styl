.row
    margin-left - $column-gap
    margin-right - $column-gap
    margin-top - $column-gap

    &:last-child
        margin-bottom - $column-gap

    &:not(:last-child)
        margin-bottom (1.5rem - $column-gap)

    // Modifiers
    &.is-centered
        justify-content center

    &.is-gapless
        margin-left 0
        margin-right 0
        margin-top 0

        & > .column
            margin 0
            padding 0 !important

        &:not(:last-child)
            margin-bottom 1.5rem

        &:last-child
            margin-bottom 0

    &.is-mobile
        display flex

    &.is-multiline
        flex-wrap wrap

    &.is-vcentered
        align-items center

    // Responsiveness
    +tablet()
        &:not(.is-desktop)
            display flex

    +desktop()
        // Modifiers
        &.is-desktop
            display flex

.row.is-variable
    margin-left (-1 * $column-gap)
    margin-right (-1 * $column-gap)

    .column
        padding-left $column-gap
        padding-right $column-gap

    for i in (0...8)
        &.is-{i}
            $column-gap i * 0.25rem
