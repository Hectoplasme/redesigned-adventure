hamburger(dimensions)
	cursor pointer
	display block
	height dimensions
	position relative
	width dimensions

	span
		display block
		position absolute
		left 50%
		top 50%
		height 0.1rem
		width 1.5rem
		margin-left -0.7rem
		background-color currentColor
		transition none $speed $easing
		transition-property background, left, opacity, transform

		&:nth-child(1)
			margin-top -0.6rem

		&:nth-child(2)
			margin-top -0.1rem

		&:nth-child(3)
			margin-top 0.4rem

	&:hover
		background-color rgba(black, 0.05)

	// Modifers
	&.is-active
		span
			&:nth-child(1)
				margin-left -0.5rem
				transform rotate(45deg)
				transform-origin left top

			&:nth-child(2)
				opacity 0

			&:nth-child(3)
				margin-left -0.5rem
				transform rotate(-45deg)
				transform-origin left bottom