delete()
	unselectable()
	-moz-appearance none
	-webkit-appearance none
	background-color rgba($black, 0.2)
	border none
	border-radius 29048.6rem
	cursor pointer
	display inline-block
	flex-grow 0
	flex-shrink 0
	font-size $size-normal
	height 2rem
	max-height 2rem
	max-width 2rem
	min-height 2rem
	min-width 2rem
	outline none
	position relative
	vertical-align top
	width 2rem
	&:before,
	&:after
		background-color $white
		content ""
		display block
		left 50%
		position absolute
		top 50%
		transform translateX(-50%) translateY(-50%) rotate(45deg)
		transform-origin center center
	&:before
		height .2rem
		width 50%
	&:after
		height 50%
		width .2rem
	&:hover,
	&:focus
		background-color rgba($black, 0.3)
	&:active
		background-color rgba($black, 0.4)
	// Sizes
	&.is-small
		height 1.6rem
		max-height 1.6rem
		max-width 1.6rem
		min-height 1.6rem
		min-width 1.6rem
		width 1.6rem
	&.is-medium
		height 2.4rem
		max-height 2.4rem
		max-width 2.4rem
		min-height 2.4rem
		min-width 2.4rem
		width 2.4rem
	&.is-large
		height 3.2rem
		max-height 3.2rem
		max-width 3.2rem
		min-height 3.2rem
		min-width 3.2rem
		width 3.2rem
