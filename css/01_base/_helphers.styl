// Float

.u-clearfix
	clearfix()

.u-align-right
	float right !important 

.u-align-left
	float left !important

// Overflow

.u-clipped
	overflow hidden !important

// Overlay

.u-overlay
	overlay()

// Typography

.u-t-center
	text-align center

.u-t-right
	text-align right

.u-t-justify
	text-align justify

.u-t-capitalized
	text-transform capitalize !important

.u-t-lowercase
	text-transform lowercase !important

.u-t-uppercase
	text-transform uppercase !important

.u-t-bold
	bold()

.u-t-italic
	italic()

//Visibility

.u-block
	display block !important 

.u-a-none
	appearance none
	border 0
	background transparent
	outline 0

// Togglers
.is-visible-t,
.is-visible-mt,
.is-visible-m
	display none

.is-hidden
  display none !important

+mobile() 
	.is-hidden-m
		display none !important
	
	.is-visible-m
		display inherit

+tablet() 
	.is-hidden-t
		display none !important
		
	.is-visible-t
		display inherit

+tablet-only() 
	.is-hidden-t-o
		display none !important
		
	.is-visible-t-o
		display inherit

+touch() 
	.is-hidden-touch
		display none !important
		
	.is-visible-touch
		display inherit

+desktop() 
	.is-hidden-d
		display none !impordant
		
	.is-visible-d
		display inherit

+desktop-only() 
	.is-hidden-d-o
		display none !important
		
	.is-visible-d-o
		display inherit

+wide() 
	.is-hidden-w
		display none !important
		
	.is-visible-w
		display inherit

+wide-only() 
	.is-hidden-w-o
		display none !important
		
	.is-visible-w-o
		display inherit

+fullhd() 
	.is-hidden-f
		display none !important
		
	.is-visible-f
		display inherit

// Other
.u-no-margin
	margin 0 !important 

.u-no-padding
	padding 0 !important 

.u-no-shadow
	box-shadow none !important 

.is-unselectable
	unselectable()