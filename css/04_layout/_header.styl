.header
    padding-top 5rem

    +wide()
        padding-top 0
        height 100vh
        display flex
        align-items center

    &__block
        position relative
        z-index -1
        width 124%
        padding-top 60%
        margin-top 10rem

        background url(/assets/images/header.png) no-repeat 59% 50%
        background-size contain
        transform translateX(-12%)

        +tablet()
            margin 0

            &:after
                position absolute
                z-index 100
                content ''
                bottom 0
                left 0

                width 100%
                height 68.2%
                background url(/assets/images/header-fg.png) no-repeat 60% bottom
                background-size contain

    &__title
        position absolute
        left 52%
        top -8rem
        transform translateX(-50%)

        +tablet()
            top 7%

        +desktop()
            top 20%

