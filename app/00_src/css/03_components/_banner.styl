.banner
    height 80vh
    min-height 40rem
    overflow hidden

    +wide()
        height 93vh

    &__bg
        position fixed
        z-index -1
        top 0
        left 0
        width 100%
        height 100%
        background-size 300%
        animation waves-touch 30s linear infinite

        +wide()
            background-size 110%
            background-position 50% 50%
            animation waves 15s linear infinite

    &__inner
        position relative
        height 100%

    &__title
        position absolute
        left $gap
        bottom 4rem

        +tablet()
            left (2 * $gap)
            bottom (2 * $gap)

        +wide()
            bottom 12rem

@keyframes waves
    0%
        background-size 120%
        background-position 50% 50%
    50%
        background-size 125%
        background-position 80% 50%
    100%
        background-size 120%
        background-position 50% 50%

@keyframes waves-touch
    0%
        background-size 300%
        background-position 50% 50%
    50%
        background-size 305%
        background-position 60% 60%
    100%
        background-size 300%
        background-position 50% 50%
