                div.column
                    p.color-tile.u-b-grey-light
                    p.color-title #F3F0DF
                div.column
                    p.color-tile.u-b-blue
                    p.color-title #A6D6D1
                div.column
                    p.color-tile.u-b-grey
                    p.color-title #7D7D7D
                div.column
                    p.color-tile.u-b-black
                    p.color-title #2B2817
        div.section.section--typography
            h2.heading-3 Typography
            div.row
                div.column.section__left.is-5
                    p.heading-1 Header H1
                    p.teasing-1 Playfair Black 95px #2B2817
